<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ renderData.title or title or metadata.title }} ‚Äî Paavan's Blog</title>
  <meta name="Description" content="{{ renderData.description or description or metadata.description }}">
  <meta name="twitter:card" content="summary_large_image">
  <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
  <!-- <link rel="stylesheet" href="{{ '/css/prism-base16-monokai.dark.css' | url }}"> -->
  <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
  <link href="https://fonts.googleapis.com/css2?family=EB+Garamond:ital,wght@0,400;0,600;1,400&display=swap" rel="stylesheet">
  <link rel="icon" type="image/png" href="/img/favicon.png">
  {%- if canonical -%}
  <link rel="canonical" href="{{ canonical }}">
  {%- endif -%}
</head>
<body>
  <div class="page">
  <header>
    <div class="header-inner">
    <h1 class="home"><a href="{{ '/' | url }}">paavan/blog</a></h1>

    {#- Read more about `eleventy-navigation` at https://www.11ty.dev/docs/plugins/navigation/ #}
    <ul class="nav">
      {%- for entry in collections.all | eleventyNavigation %}
      <li class="nav-item{% if entry.url == page.url %} nav-item-active{% endif %}"><a href="{{ entry.url | url }}">{{ entry.title }}</a></li>
      {%- endfor %}
    </ul>
  </div>
  </header>
  <div class="container">
    <main{% if templateClass %} class="{{ templateClass }}"{% endif %}>
      {{ content | safe }}
    </main>
</div>

{%- if footer -%} 

<footer>


  <hr />

  <h3>Subscribe for more...</h3>

  <p>Join my mailing list to receive infrequent updates. You can unsubscribe at any time using the link in the email footers.</p>

  <div id="mc_embed_signup">
    <form action="https://gmail.us3.list-manage.com/subscribe/post?u=3c954400dc7dab86e547ba61b&id=3ef2e7668b" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
      <div id="mc_embed_signup_scroll">
        <div class="mc-field-group">
          <label for="mce-FNAME">First Name: </label>
          <input type="text" value="" name="FNAME" class="" id="mce-FNAME" placeholder="Jonathan">
        </div>
        <div class="mc-field-group">
          <label for="mce-LNAME">Last Name: </label>
          <input type="text" value="" name="LNAME" class="" id="mce-LNAME" placeholder="Doe">
        </div>
        <div class="mc-field-group">
          <label for="mce-EMAIL">Email Address:  <span class="asterisk">*</span>
          </label>
          <input type="email" value="" name="EMAIL" class="required email" id="mce-EMAIL" placeholder="johndoe1@email.com">
        </div>
        <div id="mce-responses" class="clear">
          <div class="response" id="mce-error-response" style="display:none"></div>
          <div class="response" id="mce-success-response" style="display:none"></div>
        </div>    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
        <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_3c954400dc7dab86e547ba61b_3ef2e7668b" tabindex="-1" value=""></div>
        <div class="clear"><input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button"></div>
      </div>
    </form>
  </div>
  <!--End mc_embed_signup-->



  <p><a href="{{ '/' | url }}">‚Üê Home</a></p>

</footer>
</div>

{%- endif -%}

{%- if darkmodecaption-%}

<p id="darkmodecaption"><em>Flip the light switch</em></p>

{%- endif -%}

<!-- Current page: {{ page.url | url }} -->
</body>

